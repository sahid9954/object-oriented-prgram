//1.a .Sum using while loop
#include <iostream>
using namespace std;
int main() {
    int num,rem,sum=0;
    cout<<"enter the number:";
    cin>>num;
    while(num>0){
        rem=num%10;
        sum+=rem;
        num=num/10;
    }
    cout<<"\n sum of digits="<<sum;
    cout<<endl;
    return 0;
}
